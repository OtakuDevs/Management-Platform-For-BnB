@model ResultViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/custom/result-partial-customization.css" class="rel">

@section Scripts
{
    <script src="~/js/default/http_cdnjs.cloudflare.com_ajax_libs_jspdf_1.3.4_jspdf.min.js"></script>
    <script src="~/js/default/http_cdnjs.cloudflare.com_ajax_libs_jspdf-autotable_3.5.6_jspdf.plugin.autotable.js"></script>
   
    <script src="~/js/custom/result-partial.js" type="text/javascript"></script>
}

<div class="result-popup-container">
    <div class="result-popup">
        <div class="result-popup-header">
            <h2>@Model.Title</h2>
        </div>
        <div class="result-popup-body">
            <p>@Model.Message</p>
        </div>

        <div id="receipt" class="result-request-details">
            <h2>Customer Request</h2>
            <p>You reservation request is successful</p>
            <button id="result-partial-downloadButton" onclick="downloadReceipt()">Download Receipt as PDF</button>

            <h3>Customer Details</h3>
            <div class="result-details-row">
                <label for="customerName">Customer Name:</label>
                <input type="text" id="customerName" value="@($"{Model.Request.Customer.FirstName} {Model.Request.Customer.LastName}")" readonly>
            </div>

            <div class="result-details-row">
                <label for="customerEmail">Customer Email:</label>
                <input type="email" id="customerEmail" value="@Model.Request.Customer.Email" readonly>
            </div>

            <div class="result-details-row">
                <label for="customerPhone">Customer Phone:</label>
                <input type="tel" id="customerPhone" value="@Model.Request.Customer.PhoneNumber" readonly>
            </div>

            <h3>Reservation Details</h3>

            <div class="result-details-row">
                <label for="sequenceNumber">Reservation Number:</label>
                <input type="text" id="sequenceNumber" value="@Model.Request.SequenceNumber" readonly>
            </div>

            <div class="result-details-row">
                <label for="roomNumber">Room Number:</label>
                <input type="text" id="roomNumber" value="@Model.Request.Room.RoomNumber" readonly>
            </div>

            <div class="result-details-row">
                <label for="numberOfGuests">Number of Guests:</label>
                <input type="number" id="numberOfGuests" value="@Model.Request.NumberOfGuests" readonly>
            </div>

            <div class="result-details-row">
                <label for="numberOfNights">Number of Nights:</label>
                <input type="number" id="numberOfNights" value="@Model.Request.NumberOfNights" readonly>
            </div>

            <h3>Booking Schedule</h3>

            <div class="result-details-row">
                <label for="checkInDate">Check-In Date:</label>
                <input type="text" id="checkInDate" value="@Model.Request.CheckIn.ToString("yyyy-MM-dd")" readonly>
            </div>

            <div class="result-details-row">
                <label for="checkOutDate">Check-Out Date:</label>
                <input type="text" id="checkOutDate" value="@Model.Request.CheckOut.ToString("yyyy-MM-dd")" readonly>
            </div>

            <div class="result-details-row">
                <label for="checkInTime">Check-In Time:</label>
                <input type="text" id="checkInTime" value="@Model.Request.CheckInTime.ToString()" readonly>
            </div>

            <div class="result-details-row">
                <label for="specialRequirements">Special Requirements:</label>
                <textarea id="specialRequirements" readonly>@Model.Request.SpecialRequirements</textarea>
            </div>

            <h3>Room Charges</h3>
            <div class="result-details-row">
                <label for="roomPrice">Room Price (SEK):</label>
                <input type="text" id="roomPrice" value="@Model.Request.Room.Rate" readonly>
            </div>

            <div class="result-details-row">
                <label for="initialPrice">Initial Price (SEK):</label>
                <input type="text" id="initialPrice" value="@Model.OriginalPrice" readonly>
            </div>

            <div class="result-details-row">
                <label for="discount">Discount (SEK):</label>
                <input type="text" id="discount" value="@Model.Discount" readonly>
            </div>

            <div class="result-details-row">
                <label for="totalPrice">Total Price (SEK):</label>
                <input type="text" id="totalPrice" value="@Model.Request.TotalPrice" readonly>
            </div>
        </div>
    </div>
</div>